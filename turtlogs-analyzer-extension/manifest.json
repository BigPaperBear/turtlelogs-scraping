{
  "manifest_version": 3,
  "name": "TurtLogs Analyzer",
  "version": "1.1.1",
  "description": "Analytics overlay + popup output for turtlogs.com PvE rankings.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://turtlogs.com/*",
    "https://www.turtlogs.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TurtLogs Analyzer"
  },
  "content_scripts": [
    {
      "matches": [
        "https://turtlogs.com/*",
        "https://www.turtlogs.com/*"
      ],
      "js": ["turtlogs_scraping.js", "bridge.js"],
      "run_at": "document_idle"
    }
  ]
}
